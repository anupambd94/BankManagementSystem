<Window x:Class="BankManagementSystem.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="R - Bank Management System: Login"
	Width="393" Height="200" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid x:Name="LayoutRoot">
        <Grid x:Name="formBody">
            <TextBox x:Name="EmailBox" Margin="104,25,57,0"  VerticalAlignment="Top" Height="25" TextWrapping="Wrap">
            </TextBox>
            <TextBlock HorizontalAlignment="Left" Margin="6,67,0,69" Width="88" FontFamily="Calibri" FontSize="16" Text="Password:" TextAlignment="Right" TextWrapping="Wrap" Grid.Column="1">

            </TextBlock>
            <PasswordBox x:Name="passwordBox" Margin="104,65,57,71"   PasswordChar="*" Height="25" FontFamily="Calibri" FontSize="16" Grid.Column="1" />
            <TextBlock HorizontalAlignment="Left" Margin="6,27,0,0" VerticalAlignment="Top" Width="88" Height="25" FontFamily="Calibri" FontSize="16" TextAlignment="Right" TextWrapping="Wrap" Grid.Column="1">
				<Run Text="Username:"/></TextBlock>
            <Button FontFamily="Calibri" FontSize="16" Margin="104,0,0,31"  VerticalAlignment="Bottom" Height="25"  x:Name="btLogin" Content="Login" Click="Button_Click" HorizontalAlignment="Left" Width="64">

            </Button>
        </Grid>
    </Grid>
</Window>
